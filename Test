#include <iostream>

void drawTriangle(int n) {
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j++) {
            std::cout << "* ";
        }
        std::cout << std::endl;
    }
}

int main() {
    int n;
    std::cout << "Enter the height of the triangle: ";
    std::cin >> n;
    
    drawTriangle(n);

    return 0;
}
